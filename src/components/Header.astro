---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
} from "astro-navbar";

import movies from "../movies.json";
---

<header class="lg:flex justify-between py-10 gap-5 mx-auto">
  <Astronav closeOnClick>
    <div class="flex w-full lg:w-auto justify-between">
      <a href="/jimena/" class="logo">
        <h1>JIMENA AZULA</h1>
        <p>PRODUCTION DESIGNER</p>
      </a>
      <div class="block lg:hidden">
        <MenuIcon class="w-4 h-4 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden lg:flex">
      <ul class="flex flex-col lg:flex-row lg:gap-5">
        <li>
          <Dropdown class="group">
            <button class="flex items-center gap-1">
              <span>NARRATIVE</span>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="3"
                stroke="rgb(94, 93, 93)"
                class="w-3 h-3 mt-0.5 group-open:rotate-180"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
              </svg>
            </button>
            <DropdownItems class="relative">
              <div class="lg:absolute bg-white top-2 border shadow rounded">
                <ul>
                  {
                    movies.map(({ title, slug }) => (
                      <li>
                        <a class="block menu-link" href={`/jimena/${slug}`}>
                          {title}
                        </a>
                      </li>
                    ))
                  }
                </ul>
              </div>
            </DropdownItems>
          </Dropdown>
          <li>
            <a href="/jimena/commercial">COMMERCIAL</a>
          </li>
          <li>
            <a href="/jimena/music-videos">MUSIC VIDEOS</a>
          </li>
          <li>
            <a href="/jimena/about">ABOUT</a>
          </li>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>

<style>
  header {
    position: relative;
    z-index: 1000;
    max-width: 1200px;
    font-family: "Roboto", sans-serif;
    font-weight: 100;
    padding: 0 1rem;
  }

  .menu-link {
    padding: 10px;
    white-space: nowrap;
  }

  .menu-link:hover {
    background: rgb(94, 93, 93);
    color: white;
  }

  .logo {
  }

  .logo h1 {
    font-size: 1.75rem;
    letter-spacing: 2.8px;
  }

  .logo p {
    font-size: 0.8125rem;
    color: rgb(94, 93, 93);
  }
</style>
